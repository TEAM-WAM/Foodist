<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Foodist</title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon/fork-knife.ico' %>

    <!-- Bootstrap -->
    <link href="vendor/assets/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="vendor/assets/stylesheets/freelancer.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="vendor/fonts/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

  </head>


  <body id="page-top" class="index">

  <%= render 'shared/navigation' %>

  <header>
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <img class="img-responsive" src="img/profile.png" alt="">
                  <div class="intro-text">
                      <span class="name">Foodist</span>
                      <hr class="star-light">
                  </div>
              </div>
          </div>
      </div>
  </header>

    <%= yield %>

  </body>
</html>
