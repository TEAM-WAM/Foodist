<section>
  <div class="container">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 text-center">
      <h2 class="h2-red">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true, :class => "form-control register" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control register" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me, :class => "checkbox-inline" %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", :class => "btn btn-danger" %>
        </div>
      <% end %>

      <div class="links-signup">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</section>
