<section>
  <div class="container">
    <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 text-center">
      <h2 class="h2-red">Register</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, :class => "form-control register" %>
        </div>

        <div class="field">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, :class => "form-control register"%>
        </div>

        <div class="field">
          <%= f.label :last_name %><br/>
          <%= f.text_field :last_name, :class => "form-control register" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, :class => "form-control register" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class => "form-control register" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control register" %>
        </div><br />

        <div class="actions">
          <%= f.submit "Create Account", :class => "btn btn-danger" %>
        </div><br />
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
