<section>
  <div class="container">
    <div class="col-lg-12">

    <h1 class="h2-red">Create New Group</h1>

      <% if @group.errors.any? %>
        <div id='error_explanation'>
          <h2>
            <%= pluralize(@group.errors.count, 'error') %> prohibited this article from being saved:
          </h2>
          <ul>
            <% @group.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

    <%= react_component 'Groups' %>

      <%= form_for @group, html: { multipart: true } do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, :class => "form-control" %><br>

        <%= f.label :description %>
        <%= f.text_area :description, :class => "form-control" %><br>

        <%= f.hidden_field :creator_id, :value => current_user.id %>

        <%= f.label :avatar  %>
        <%= f.file_field :avatar, :class => "form-control" %><br>

        <%= f.submit 'Create Group', :class => "btn btn-danger" %>

      <% end %>

    </div>
  </div>
</section>
