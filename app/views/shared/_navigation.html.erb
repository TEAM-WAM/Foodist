<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom" role="navigation">
  <div class="container-fluid" id="navbar-toggle">
    <div class="navbar-header page-scroll">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
      </button>
      <a class="navbar-brand" href="/">Foodist</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
            <li class="hidden">
                <a href="#page-top"></a>
            </li>
            <% if user_signed_in? %>
            <li class="search-button">
                <a class="glyphicon glyphicon-search" href="/search"></a>
            </li>
            <li class="page-scroll">
                <%= link_to current_user.first_name, profile_path(current_user) %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Groups', groups_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Lists', lists_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Restaurants', restaurants_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="search-button">
                <a class="glyphicon glyphicon-search" href="/search"></a>
            </li>
            <li class="page-scroll">
                <%= link_to 'Groups', groups_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Lists', lists_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Restaurants', restaurants_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Register', new_user_registration_path %>
            </li>
            <li class="page-scroll">
                <%= link_to 'Log In', new_user_session_path %>
            </li>
          <% end %>
        </ul>
     </div>
  </div>
  <div class="container-fluid" id="searchbar-toggle">
      <%= form_tag(search_path, :method => "get", :class => "form-inline", id: "search-form") do %>
        <div class="form-group">
          <%= text_field_tag :location, params[:location], size: 50, :class => "form-control input-lg", id: "input-field", placeholder: "Please type a location..." %>
          <%= text_field_tag :search, params[:search], size: 135, :class => "form-control input-lg", id: "input-field", placeholder: "Search for a restaurant, cuisine, or a dish..." %>
        </div>
        <div class="form-group">
          <%= button_tag(type: "submit", class: "btn btn-default btn-lg", id: "form-submit") do %>
              Search <i class="icon-repeat"></i>
          <% end %>
        </div>
        <div class="form-group">
          <span class="glyphicon glyphicon-remove" id="close-search" style="font-size: 26px"></span>
        </div>
      <% end %>
  </div>
</nav>

<script type='text/javascript'>
      $(function(){
        $("#searchbar-toggle").hide();
         $(".search-button").click(function(e){
             e.preventDefault();
             $("#navbar-toggle").hide();
             $("#searchbar-toggle").show();
         });
         $("#close-search").click(function(e){
             e.preventDefault();
             $("#navbar-toggle").show();
             $("#searchbar-toggle").hide();
         });
      })
</script>
